
<%= simple_form_for(@compra) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :comprador %>
    <%= f.input :produto %>
    <%= f.input :valor %>
    <%= f.input :quantidade %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
