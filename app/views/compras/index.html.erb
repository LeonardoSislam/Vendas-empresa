<p id="notice"><%= notice %></p>

<h1>Compras</h1>

<table class="table table-striped table-hover text-center">
  <thead style="background-color: #4CAF50">
    <tr>
      <th>Comprador</th>
      <th>Produto</th>
      <th>Valor</th>
      <th>Quantidade</th>
      <th>Botões de ação</th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.comprador %></td>
        <td><%= compra.produto.try(:nomeproduto)%></td>
        <td><%= compra.valor %></td>
        <td><%= compra.quantidade %></td>
        <td><%= link_to compra_path(compra) do %>
              <i class="far fa-eye" style="font-size:20px;color:black"></i>
            <% end %>

            <%= link_to edit_compra_path(compra) do %>
                <i class="fas fa-pencil-alt" style="font-size:20px;color:blue"></i>
            <% end %>

            <%= link_to compra_path(compra),method: :delete, data: { confirm: 'Você tem certeza que deseja deletar esta compra?' } do %>
                <i class="far fa-trash-alt" style="font-size:20px;color:red"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Compra', new_compra_path %>
