<p id="notice"><%= notice %></p>

<h2>Lista de produtos registrados</h2>

<br>

<table class="table table-striped table-hover text-center">
  <thead style="background-color: #4CAF50">
    <tr>
      <th>Nome do produto</th>
      <th>Valor unitario do produto</th>
      <th>Botões de ação</th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nomeproduto %></td>
        <td><%= produto.valor %></td>
        <td><%= link_to produto_path(produto) do %>
              <i class="far fa-eye" style="font-size:20px;color:black"></i>
            <% end %>

            <%= link_to edit_produto_path(produto) do %>
                <i class="fas fa-pencil-alt" style="font-size:20px;color:blue"></i>
            <% end %>

            <%= link_to produto_path(produto),method: :delete, data: { confirm: 'Você tem certeza que deseja deletar esta compra?' } do %>
                <i class="far fa-trash-alt" style="font-size:20px;color:red"></i>
            <% end %>
        </td>


      </tr>
    <% end %>
      <%= page_entries_info @produtos %>
  </tbody>
</table>

<br><br>

<div class="container pagination justify-content-end ">
  <%= paginate @produtos,
        theme: 'twitter-bootstrap-4',
        nav_class: "d-inline-b"
  %>
</div>

<br>
