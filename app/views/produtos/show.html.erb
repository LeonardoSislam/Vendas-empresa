<p id="notice"><%= notice %></p>

<h2>Detalhes do Produto</h2>

<form>
  <div class="card border-success mb-3 ">
    <div class="card-body ">
      <div class="">
        <strong>Nomeproduto:</strong>
        <%= @produto.nomeproduto %>
      </div>
      <div class="">
        <strong>Valor:</strong>
        <%= @produto.valor %>
      </div>

      <br>

      <div class="text-center">
        <%= link_to 'Voltar', produtos_path, class: "btn btn-outline-success" %>
        <%= link_to 'Editar', edit_produto_path(@produto), class: "btn btn-outline-success" %>
      </div>
    </div>
  </div>
</form>
