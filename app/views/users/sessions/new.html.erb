<h2>Realizar login</h2>


<div class="card border-success mb-3" >
  <div class="card-body ">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email"}, wrapper_html: { class: 'col-md-9'} %>
        <%= f.input :password,required: false,input_html: { autocomplete: "current-password" }, wrapper_html: { class: 'col-md-9'} %>
      </div>

      <div class="form-actions text-center">
        <%= f.submit "Entrar" , class: "btn btn-outline-success"%>
      </div>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>
